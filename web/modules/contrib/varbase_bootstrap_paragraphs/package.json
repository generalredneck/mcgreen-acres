{
  "name": "varbase_bootstrap_paragraphs",
  "description": "Varbase Bootstrap Paragraphs",
  "license": "GPL-2.0-or-later",
  "private": true,
  "engines": {
    "yarn": ">= 4.9.3",
    "node": ">= 20.0"
  },
  "scripts": {
    "theme:build": "webpack --progress --config webpack.config.build.js && stylelint \"css/**/*.css\" --fix",
    "components:build": "webpack --progress --config webpack.config.components.js && stylelint \"modules/vbp_text_and_image/css/*.css\" --fix",
    "theme:full-build": "yarn theme:build && yarn components:build",
    "theme:watch": "webpack --progress --config webpack.config.dev.js --watch",
    "phpcs": "phpcs --standard=./.phpcs.xml .",
    "phpcbf": "phpcbf --standard=./.phpcs.xml .",
    "lint:js": "node ./node_modules/eslint/bin/eslint.js .",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:yaml": "node ./node_modules/eslint/bin/eslint.js --ext .yml .",
    "spellcheck": "cspell lint ."
  },
  "keywords": [
    "SASS",
    "Bootstrap",
    "Drupal",
    "Varbase",
    "Varbase Bootstrap Paragraphs",
    "Bootstrap Paragraphs",
    "Paragraphs"
  ],
  "author": "Vardot",
  "devDependencies": {
    "@popperjs/core": "~2",
    "autoprefixer": "^10.4.20",
    "bootstrap": "~5",
    "clean-webpack-plugin": "^4.0.0",
    "cspell": "^8.16.1",
    "css-loader": "^5.2.7",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jquery": "^1.5.1",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-yml": "^1.18.0",
    "file-loader": "^5.0.2",
    "img-loader": "^4.0.0",
    "mini-css-extract-plugin": "^0.11.3",
    "postcss": "^8.5.3",
    "postcss-loader": "^6.2.1",
    "postcss-perfectionist": "^2.3.9",
    "prettier": "^3.5.3",
    "sass": "^1.44.0",
    "sass-loader": "^12.3.0",
    "stylelint": "^16.19.1",
    "stylelint-checkstyle-formatter": "^0.1.2",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "^5.0.3",
    "terser": "^5.39.0",
    "terser-webpack-plugin": "^5.3.14",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^5.7.3",
    "webpack-remove-empty-scripts": "^0.7.1"
  },
  "browserslist": [
    "last 2 Chrome major versions",
    "last 2 Firefox major versions",
    "last 2 Safari major versions",
    "last 2 Edge major versions",
    "last 2 Opera versions",
    "last 2 iOS major versions",
    "last 1 ChromeAndroid version",
    "last 1 Samsung version",
    "Firefox ESR"
  ],
  "packageManager": "yarn@4.9.3"
}
